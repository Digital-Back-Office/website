---
interface Props {
  id?: string;
  section: {
    badge: string;
    heading: string;
    text: string;
    image_placeholder: string;
    cards: Array<{
      title: string;
      description: string;
    }>;
  };
  imagePosition?: 'left' | 'right';
}

const { id, section, imagePosition = 'right' } = Astro.props;
const isImageRight = imagePosition === 'right';
---

<section id={id} style="padding: 5rem 0; background-color: transparent; margin-bottom:3rem;" data-bs-theme="dark">
  <div class="container">
    <div class="row g-4">
      {isImageRight ? (
        <>
          {/* Text on left, Image on right */}
          <div class="col-lg-5 mb-4 mb-lg-0">
            <div style="display: inline-block; background-color: rgba(255, 255, 255, 0.1); border-radius: 50px; padding: 0.5rem 1.25rem; margin-bottom: 1.5rem; border: 1px solid rgba(255, 255, 255, 0.2);">
              <span style="font-size: 0.875rem; font-weight: 600; color: #fff; letter-spacing: 0.5px;">{section.badge}</span>
            </div>
            <h2 style="font-size: 2.75rem; font-weight: 700; color: #fff; margin-bottom: 1.5rem;">
              {section.heading}
            </h2>
            <p style="font-size: 1.25rem; line-height: 1.6; color: rgba(255, 255, 255, 0.75); margin-bottom: 2rem;">
              {section.text}
            </p>
            <a href="/contact-us" style="display: inline-flex; align-items: center; gap: 0.5rem; font-size: 1.125rem; padding: 0.875rem 2rem; font-weight: 600; background-color: transparent; border: 2px solid #52CEC7; color: #52CEC7; transition: all 0.3s ease; border-radius: 50px; text-decoration: none;" onmouseover="this.style.backgroundColor='#52CEC7'; this.style.color='#000'; this.style.transform='translateY(-2px)'; this.style.boxShadow='0 4px 12px rgba(82, 206, 199, 0.3)';" onmouseout="this.style.backgroundColor='transparent'; this.style.color='#52CEC7'; this.style.transform='translateY(0)'; this.style.boxShadow='none';">
              Get started
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <line x1="5" y1="12" x2="19" y2="12"></line>
                <polyline points="12 5 19 12 12 19"></polyline>
              </svg>
            </a>
          </div>
          <div class="col-lg-7">
            <div style="background: linear-gradient(135deg, rgba(82, 206, 199, 0.08) 0%, rgba(238, 191, 46, 0.05) 100%); border-radius: 16px; margin-bottom: 2rem; border: 1px solid rgba(82, 206, 199, 0.2); min-height: 400px; display: flex; align-items: center; justify-content: center; padding: 2rem; box-shadow: 0 8px 32px rgba(82, 206, 199, 0.15); position: relative; overflow: hidden;">
              <div style="position: absolute; top: -50%; right: -50%; width: 200%; height: 200%; background: radial-gradient(circle, rgba(82, 206, 199, 0.1) 0%, transparent 70%); opacity: 0.5;"></div>
              <img src={section.image_placeholder} alt={section.heading} style="max-width: 100%; height: auto; object-fit: contain; display: block; position: relative; z-index: 1; filter: drop-shadow(0 4px 16px rgba(0, 0, 0, 0.2));"/>
            </div>

            <div class="row row-cols-1 row-cols-md-3 g-3">
              {section.cards.map((card) => (
                <div class="col">
                  <div style="background-color: rgba(255, 255, 255, 0.03); border-radius: 12px; padding: 1.5rem; height: 100%; border: 1px solid rgba(255, 255, 255, 0.08); transition: transform 0.3s ease, box-shadow 0.3s ease;" onmouseover="this.style.transform='translateY(-4px)'; this.style.boxShadow='0 8px 24px rgba(47, 183, 184, 0.15)';" onmouseout="this.style.transform='translateY(0)'; this.style.boxShadow='none';">
                    <h3 style="font-size: 1.25rem; font-weight: 700; color: #fff; margin-bottom: 0.75rem;">
                      {card.title}
                    </h3>
                    <p style="font-size: 1rem; line-height: 1.6; color: rgba(255, 255, 255, 0.8); margin-bottom: 0;">
                      {card.description}
                    </p>
                  </div>
                </div>
              ))}
            </div>
          </div>
        </>
      ) : (
        <>
          {/* Image on left, Text on right */}
          <div class="col-lg-7 mb-4 mb-lg-0">
            <div style="background-color: rgba(255, 255, 255, 0.03); border-radius: 12px; padding: 2rem; margin-bottom: 2rem; border: 1px solid rgba(255, 255, 255, 0.08); min-height: 300px; display: flex; align-items: center; justify-content: center;">
              <img src={section.image_placeholder} alt={section.heading} style="max-width: 100%; max-height: 100%; object-fit: contain; display: block;"/>
            </div>

            <div class="row row-cols-1 row-cols-md-3 g-3">
              {section.cards.map((card) => (
                <div class="col">
                  <div style="background-color: rgba(255, 255, 255, 0.03); border-radius: 12px; padding: 1.5rem; height: 100%; border: 1px solid rgba(255, 255, 255, 0.08); transition: transform 0.3s ease, box-shadow 0.3s ease;" onmouseover="this.style.transform='translateY(-4px)'; this.style.boxShadow='0 8px 24px rgba(47, 183, 184, 0.15)';" onmouseout="this.style.transform='translateY(0)'; this.style.boxShadow='none';">
                    <h3 style="font-size: 1.25rem; font-weight: 700; color: #fff; margin-bottom: 0.75rem;">
                      {card.title}
                    </h3>
                    <p style="font-size: 1rem; line-height: 1.6; color: rgba(255, 255, 255, 0.8); margin-bottom: 0;">
                      {card.description}
                    </p>
                  </div>
                </div>
              ))}
            </div>
          </div>
          <div class="col-lg-5">
            <div style="display: inline-block; background-color: rgba(255, 255, 255, 0.1); border-radius: 50px; padding: 0.5rem 1.25rem; margin-bottom: 1.5rem; border: 1px solid rgba(255, 255, 255, 0.2);">
              <span style="font-size: 0.875rem; font-weight: 600; color: #fff; letter-spacing: 0.5px;">{section.badge}</span>
            </div>
            <h2 style="font-size: 2.75rem; font-weight: 700; color: #fff; margin-bottom: 1.5rem;">
              {section.heading}
            </h2>
            <p style="font-size: 1.25rem; line-height: 1.6; color: rgba(255, 255, 255, 0.75); margin-bottom: 2rem;">
              {section.text}
            </p>
            <a href="/contact-us" style="display: inline-flex; align-items: center; gap: 0.5rem; font-size: 1.125rem; padding: 0.875rem 2rem; font-weight: 600; background-color: transparent; border: 2px solid #52CEC7; color: #52CEC7; transition: all 0.3s ease; border-radius: 50px; text-decoration: none; margin-bottom: 1rem;" onmouseover="this.style.backgroundColor='#52CEC7'; this.style.color='#000'; this.style.transform='translateY(-2px)'; this.style.boxShadow='0 4px 12px rgba(82, 206, 199, 0.3)';" onmouseout="this.style.backgroundColor='transparent'; this.style.color='#52CEC7'; this.style.transform='translateY(0)'; this.style.boxShadow='none';">
              Get started
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <line x1="5" y1="12" x2="19" y2="12"></line>
                <polyline points="12 5 19 12 12 19"></polyline>
              </svg>
            </a>
          </div>
        </>
      )}
    </div>
  </div>
</section>
