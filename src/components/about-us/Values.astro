---
import { getEntry } from "astro:content";

const Data = await getEntry("about", "about");
const values = Data.data.values;
---

<section class="pt-5 mt-md-2 mt-xl-4 mt-xxl-5">
  <div class="container pt-2 pt-sm-4 pt-lg-5 mt-xxl-2">
    <div class="fs-sm text-uppercase mb-3">DIGITAL BACK OFFICE</div>
    <h2 class="display-6 pb-3 mb-lg-4">
      {values.title}
    </h2>
    <div
      class="swiper"
      data-swiper-options='
      {
        "spaceBetween": 24,
        "pagination": {
          "el": ".swiper-pagination",
          "clickable": true
        },
        "breakpoints": {
          "576": { "slidesPerView": 2 },
          "992": { "slidesPerView": 3 }
        }
      }
    '
    >
      <div class="swiper-wrapper">
        {
          values.cards.map((card) => (
            <div class="swiper-slide h-auto">
              <div class="card border-0 bg-secondary rounded-5 h-100">
                <div class="card-body">
                  <img src={card.svg} alt="" />
                  <h3 class="h4">{card.title}</h3>
                  <p class="mb-0 text-white opacity-70">
                    {card.desc}
                  </p>
                </div>
              </div>
            </div>
          ))
        }
      </div>

      <!-- Pagination (bullets) -->
      <div
        class="swiper-pagination position-relative bottom-0 mt-2 pt-4 d-lg-none"
      >
      </div>
    </div>
  </div>
</section>
