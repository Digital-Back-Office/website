---
import { getEntry } from "astro:content";

const Data = await getEntry("about", "about");
const benefits = Data.data.benefits;

import { Image } from "astro:assets";
import svg1 from "/assets/images/ContactUs/svg1.svg";
import svg2 from "/assets/images/ContactUs/svg2.svg";
---

<style>
  section {
    overflow: hidden;
    background-size: cover;
    width: 100%;
    padding-top: 50px;
  }
</style>

<section class="container">
  <div class="row pb-md-4 pb-xl-5 align-items-center">
    <div class="col-md-6 mb-2 mb-md-0">
      <div
        class="card border-0 h-100 bg-size-cover bg-position-center mt-5 bg-transparent"
        style="margin-right: 30px;"
      >
        <div
          class="mb-4"
          style="width:100%; background-color:rgba(33, 37, 40, 1); border-radius:32px;
                  position:relative;  max-width:400px; aspect-ratio:1/1; overflow:hidden"
        >
          <Image src={svg1} alt="svg1" style="position:absolute; bottom:5%; " />

          <Image
            src={svg2}
            alt="svg2"
            style="position:absolute; bottom: 12%; left:15%;"
          />
        </div>
      </div>
    </div>
    <div class="col-md-6 col-xl-5 offset-xl-1">
      <div class="pt-4 pb-sm-4 ps-md-4 ps-xl-0">
        <h2 class="h1 pb-2 pb-sm-3 pb-xl-4 text-white">{benefits.title}</h2>
        {
          benefits.points.map((point) => (
            <div class="d-flex pb-3 mb-2 mb-xl-3">
              <div class="text-body-secondary pt-1">{point.number}</div>
              <div class="ps-3">
                <h3 class="h5 text-white">{point.title}</h3>
                <p class="mb-0 text-white opacity-70">{point.desc}</p>
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </div>
</section>
