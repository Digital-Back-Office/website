---
import Layout from "../../layouts/Layout.astro";
import { Image } from "astro:assets";
import dataScienceCard from "../../../assets/images/Services/datascience-card.svg"
import dataVisualCard from "../../../assets/images/Services/datavisual-card.svg"
import bigDataDevOpsCard from "../../../assets/images/Services/bigdatadevops-card.svg"
import bigDataArchitectureCard from "../../../assets/images/Services/bigdataarchitecture-card.svg"
---


    <section class="container py-4  mb-xl-3 mb-xxl-5" data-bs-theme="dark">
        <div class="row pt-2"> 
          <!-- Text + CTA button -->
          <div class="col-lg-6 d-flex flex-column mb-4 mb-lg-0 pb-sm-3 pb-lg-0">
            <h1 class="display-1 text-uppercase fw-bold mt-auto mb-2" >
              WE DESIGN <br/><span class="fw-normal">SOLUTIONS<br/>TO BRING<br/></span> EFFICIENCY
            </h1>
            <div class="d-flex flex-column align-items-start py-4 py-lg-5 gap-2">
              <a class="btn btn-lg btn-primary me-2 me-sm-3" href="#" style="background-color: rgba(82, 206, 199, 1); border-radius: 8px;"
                >Let's work together</a
              >
              <div class="flex-shrink-sm-0 d-flex justify-content-between gap-3" >
                <div class="d-flex flex-column">
                  <span style="font-weight:400;font-size:14px;line-height:17.5px;color:rgba(235, 235, 235, 1)">Reviewed by</span>
                  <span style="font-weight:700;font-size:27px;line-height:33.75px;color:rgba(235, 235, 235, 1)">Clients</span>
                </div>
  
                <div>
