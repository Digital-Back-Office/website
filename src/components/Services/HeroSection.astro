                    <path d="M49.8957 6.16898L51.0861 3.46609C51.7413 1.97905 52.5275 0.762695 52.8343 0.762695C53.141 0.762695 53.9273 1.97905 54.5825 3.46609L55.7728 6.16898L58.8224 6.51529C60.4992 6.70583 61.8714 7.0728 61.8714 7.33039C61.8714 7.58798 60.8758 8.72065 59.6583 9.84727C57.6275 11.7265 57.4788 12.0284 57.8524 13.512C58.8826 17.6036 58.8997 17.9015 58.1054 17.9015C57.6807 17.9015 56.4381 17.3344 55.3446 16.6413C52.893 15.0872 52.7755 15.0872 50.324 16.6413C48.0687 18.0704 46.5485 18.3033 46.9888 17.1514C47.1464 16.7391 47.4145 15.3211 47.5847 14.0009C47.882 11.6917 47.8162 11.5249 45.8456 9.60784C44.719 8.51196 43.7972 7.44582 43.7972 7.23865C43.7972 7.03147 45.1693 6.70583 46.8462 6.51529L49.8957 6.16898Z" fill="#52CEC7"/>
