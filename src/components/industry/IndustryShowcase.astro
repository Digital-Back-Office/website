---
import '../../styles/industry-common.css';

export interface Props {
  data: Record<string, any>;
}

const { data } = Astro.props as Props;

const heroHeading = data?.heroHeading ?? data?.title ?? '';
const heroSubtext = data?.heroSubtext ?? data?.description ?? '';
const heroVideo = data?.heroVideo ?? '';

if (!heroHeading) {
  console.warn('IndustryShowcase: missing heroHeading/title in content entry', data);
}

---

<section class="hero-section" style="position: relative; overflow: hidden;">
  {heroVideo ? (
    <video autoplay muted loop playsinline style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; object-fit: cover; z-index: 0; opacity: 0.3;">
      <source src={heroVideo} type="video/mp4" />
    </video>
  ) : null}

  <div style="width:100%; max-width:1200px; margin: 0 auto; padding: 0 20px;">
    <div style="display:flex; align-items:center;">
      <div style="flex:1; color: #fff;">
        <h1 class="hero-heading">{heroHeading}</h1>
        <p class="hero-subtext">{heroSubtext}</p>
        <a href="/contact-us" class="btn hero-cta-btn">Schedule a Free 30-Minute AI Readiness Assessment</a>
      </div>
    </div>
  </div>
</section>
