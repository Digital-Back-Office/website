<script>
    import dateTimeForCalander from "../../utils/helper/date-time-2.js";

    const BookBtn = document.querySelector(".book-btn");
    BookBtn?.addEventListener("click", async (e) => {
        e.preventDefault();
        // do validation checks
        const nameInput = document.querySelector("#name") as HTMLInputElement;
        const emailInput = document.querySelector("#email") as HTMLInputElement;
        const companyInput = document.querySelector("#company") as HTMLInputElement;
        const dateTimeInput = document.querySelector("#date-time-picker") as HTMLInputElement;

        const name = nameInput.value;
        const email = emailInput.value;
        const company = companyInput.value;
        const startDateTime = dateTimeInput.value;

        if (name && email && company && startDateTime) {
            console.log('startDateTime' + startDateTime)
            const formattedDateTime = dateTimeForCalander(startDateTime);
            console.log('format' + formattedDateTime)

            const url = `https://docs.google.com/forms/u/1/d/e/1FAIpQLSfjEw_OrfYyDm6XgCgvFG0uANSnCIGEXToxkosEXrFkOInNYQ/formResponse?&submit=Submit?usp%3Dpp_url&entry.1291198894=${name}&entry.1637227755=${company}&entry.59580764=${email}&entry.1366705830=${formattedDateTime.start}&entry.994043505=${formattedDateTime.end}`;

            try {
                const response = await fetch(url, { method: "POST" });

                if (response.ok) {
                    console.log("Form submitted successfully!");
                } else {
                    console.error("Failed to submit form.");
                }
            } catch (error) {
                console.error("Error submitting form:", error);
            }
        }
    });
</script>

