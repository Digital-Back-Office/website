---
import {getEntry } from 'astro:content';

const Data = await getEntry('home', 'home');
const hero = Data.data.hero;
---

<style>
    .contact-div {
        padding: 0 !important;
    }

    .contact-form {
        font-family: "arimo";
        background-color: #121519 !important;
        border-radius: 1rem;
        box-shadow: 0px 2px 25px 0px #7b7b7b7a;
    }

    form {
        padding: 2rem;
    }

    .card-title {
        font-size: 1.2rem;
        color: var(--ar-primary) !important;
    }

    .form-label {
        font-size: 0.8rem !important;
        color: var(--ar-primary) !important;
    }

    .form-control {
        border-radius: 0.5rem !important;
        /* font-size: 0.8rem; */
        line-height: 1 !important;
        /* width: 50%; */
    }

    .book-btn {
        background-color: var(--ar-primary);
        border-radius: 0.5rem;
        width: 100% !important;
    }

    .section-3 {
        position: relative;
    }

    .bg-img {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        object-fit: fill;
    }
</style>

<section class="hero-section">
    <div class="container position-relative">
        <div class="row pt-xl-3 pt-xxl-4 pb-5 gap-5 align-items-center">
            <div class="col col-xxl-6">
                <h1 class="text-center text-lg-start text-light fw-light">
                    {hero.title_part_1}
                    <br />
                    <p class="fw-bold">{hero.title_part_2}</p>
                </h1>
                <p
                    class="fs-lg text-center text-lg-start text-light pb-3 pb-sm-0 pb-md-2 mb-4 mb-sm-5"
                >
                    {hero.info}
                </p>
            </div>
            <div class="col contact-div offset-xxl-1 pt-sm-3">
                <!-- Contact form -->
                <div class="card contact-form border-0 py-4 px-xxl-4">
                    <form class="card-body" data-bs-theme="dark">
                        <h2
                            class="h3 card-title text-white text-center pb-2 pb-xxl-3"
                        >
                            30 mins FREE Consultation
                        </h2>
                        <div class="mb-3">
                            <label class="form-label fs-base" for="name">
                                Your Name
                            </label>
                            <input
                                class="form-control form-control-sm"
                                type="text"
                                placeholder="John Doe"
                                required
                                id="name"
                            />
                        </div>
                        <div class="mb-3">
                            <label class="form-label fs-base" for="company">
                                Company Name
                            </label>
                            <input
                                class="form-control form-control-sm"
                                type="text"
                                placeholder="Your company name"
                                required
                                id="company"
                            />
                        </div>
                        <div class="mb-3">
                            <label class="form-label fs-base" for="email">
                                Email address
                            </label>
                            <input
                                class="form-control form-control-sm"
                                type="email"
                                placeholder="Email address"
                                required
                                id="email"
                            />
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="date-time-picker"
                                >Date and time</label
                            >
                            <div class="position-relative">
                                <input
                                    class="form-control form-control-sm date-picker pe-5"
                                    type="text"
                                    placeholder="Choose date/time"
                                    data-datepicker-options='{"enableTime": true, "altInput": true, "altFormat": "F j, Y H:i", "dateFormat": "Y-m-d H:i"}'
                                    id="date-time-picker"
                                />
                                <i
                                    class="ai-calendar position-absolute top-50 end-0 translate-middle-y fs-lg text-white opacity-80 me-3"
                                ></i>
                            </div>
                        </div>
                        <div
                            class="d-flex flex-column flex-sm-row flex-lg-column flex-xxl-row align-items-center justify-content-center justify-content-lg-start pt-3 pt-xxl-4"
                        >
                            <button
                                class="btn book-btn w-100 w-sm-auto w-lg-100 w-xxl-auto me-sm-3 me-lg-0 me-xxl-3"
                                type="submit">Book now</button
                            >
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
