---
import { getEntry } from "astro:content";

const Data = await getEntry("home", "home");
const features = Data.data.features;
const cards = features.cards;
---

<style>
    .features {
        position: relative;
        background-image: url(/assets/images/home/star-links.png);
        background-size: cover;
        background-repeat: no-repeat;
        background-position: center;
    }

    .container {
        position: relative;
    }

    .features::before {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: linear-gradient(
            180deg,
            #121519 3.77%,
            rgba(26, 26, 26, 0) 52.82%,
            #121519 94.74%
        );
    }

    .item div {
        background-color: #121519;
        border-radius: 2rem;
        box-shadow: 0px 2px 10px 0px #7b7b7b7a;
        width: 100%;
        height: 100%;
    }

    @media (min-width: 1024px) {
        .features {
            min-height: 80vh;
        }
    }
</style>

<section class="features d-flex flex-column justify-content-center py-5">
    <div class="container py-5 py-lg-0">
        <h2
            class="text-center pt-4 mb-5 text-white"
        >
            {features.title}
        </h2>
        <div
            class="row row-cols-1 row-cols-md-2 row-cols-lg-3 gx-4 gy-4 pb-md-4 pb-lg-5 mb-2 mb-lg-0 mb-xxl-2"
        >
            {
                cards.map((card) => (
                    <div class="col item text-center text-sm-start">
                        <div class="p-4">
                            <img
                                src={card.img}
                                alt="icon"
                                class="d-inline-block mb-3 mb-lg-4"
                            />
                            <h3 class="h5 mb-2 text-white">{card.title}</h3>
                            <p class="mb-0 text-white opacity-70">
                                {card.info}
                            </p>
                        </div>
                    </div>
                ))
            }
        </div>
    </div>
</section>
