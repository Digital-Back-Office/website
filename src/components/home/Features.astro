                    />
                    <h3 class="h5 mb-2 text-white">{cards[2].title}</h3>
                    <p class="mb-0 text-white opacity-70">
                        {cards[2].info}
                    </p>
                </div>
            </div>

            <!-- Item -->
            <div class="col item text-center text-sm-start">
                <div class="p-4">
                    <Image
                        src={icon4}
                        alt="icon"
                        class="d-inline-block mb-3 mb-lg-4"
                    />
                    <h3 class="h5 mb-2 text-white">{cards[3].title}</h3>
                    <p class="mb-0 text-white opacity-70">
                        {cards[3].info}
                    </p>
                </div>
            </div>

            <!-- Item -->
            <div class="col item text-center text-sm-start">
                <div class="p-4">
                    <Image
                        src={icon5}
                        alt="icon"
                        class="d-inline-block mb-3 mb-lg-4"
                    />
