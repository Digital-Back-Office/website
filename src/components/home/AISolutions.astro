---
import { getEntry } from "astro:content"

const Data = await getEntry("home", "home");
const ai_solutions = Data.data.ai_solutions;

---

<!-- AI Solutions Showcase Section -->
<section style="padding: 5rem 0; background-color: transparent;" data-bs-theme="dark">
	<div class="container">
		<div class="text-center mb-5">
			<div style="display: inline-block; background-color: rgba(82, 206, 199, 0.1); border-radius: 50px; padding: 0.5rem 1.5rem; margin-bottom: 1.5rem; border: 1px solid rgba(82, 206, 199, 0.3);">
				<span style="font-size: 0.875rem; font-weight: 600; color: #52CEC7; letter-spacing: 0.5px; text-transform: uppercase;">Our Expertise</span>
			</div>
			<h2 style="font-size: 3rem; font-weight: 700; margin-bottom: 1.5rem; color: #fff;">
				{ai_solutions.title}
			</h2>
			<p style="font-size: 1.25rem; color: rgba(255, 255, 255, 0.75); max-width: 800px; margin: 0 auto;">
				{ai_solutions.sub_title}
			</p>
		</div>

		<div class="row g-4">
			{ai_solutions.cards?.map((card: any) => (
				<div class="col-lg-3 col-md-6">
					<a href={card.link ?? `/services/ai-solutions#${card.id ?? ""}`} style="text-decoration: none; display: block; height: 100%;">
						<div style="background: linear-gradient(135deg, rgba(82, 206, 199, 0.05) 0%, rgba(82, 206, 199, 0.02) 100%); border: 2px solid rgba(82, 206, 199, 0.2); border-radius: 16px; padding: 2rem; height: 100%; transition: all 0.3s ease; position: relative; overflow: hidden;" onmouseover="this.style.transform='translateY(-8px)'; this.style.borderColor='rgba(82, 206, 199, 0.5)'; this.style.boxShadow='0 12px 32px rgba(82, 206, 199, 0.2)';" onmouseout="this.style.transform='translateY(0)'; this.style.borderColor='rgba(82, 206, 199, 0.2)'; this.style.boxShadow='none';">
							<div style="position: absolute; top: -50%; right: -50%; width: 200%; height: 200%; background: radial-gradient(circle, rgba(82, 206, 199, 0.1) 0%, transparent 70%); opacity: 0.3;"></div>

							<div style="position: relative; z-index: 1;">
								<div style="width: 64px; height: 64px; background: rgba(82, 206, 199, 0.15); border-radius: 12px; display: flex; align-items: center; justify-content: center; margin-bottom: 1.5rem;">
									<img src={card.icon ?? "/assets/icons/home/startegy.svg"} alt={card.title} style="width: 48px; height: 48px;" />
								</div>

								<h3 style="font-size: 1.5rem; font-weight: 700; color: #fff; margin-bottom: 0.75rem;">
									{card.heading}
								</h3>

								<p style="font-size: 1rem; line-height: 1.6; color: rgba(255, 255, 255, 0.7); margin-bottom: 1.5rem;">
									{card.description}
								</p>

								<div style="display: flex; align-items: center; gap: 0.5rem; color: #52CEC7; font-weight: 600;">
									<span style="font-size: 0.875rem;">Learn more</span>
									<svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
										<line x1="5" y1="12" x2="19" y2="12"></line>
										<polyline points="12 5 19 12 12 19"></polyline>
									</svg>
								</div>
							</div>
						</div>
					</a>
				</div>
			))}
		</div>

		<!-- CTA Section -->
		<div class="text-center mt-5 pt-4">
			<a href="/services/ai-solutions" style="display: inline-flex; align-items: center; gap: 0.75rem; font-size: 1.125rem; padding: 1rem 2.5rem; font-weight: 600; background-color: #52CEC7; color: #000; transition: all 0.3s ease; border-radius: 50px; text-decoration: none; box-shadow: 0 4px 16px rgba(82, 206, 199, 0.3);" onmouseover="this.style.transform='translateY(-2px)'; this.style.boxShadow='0 8px 24px rgba(82, 206, 199, 0.4)';" onmouseout="this.style.transform='translateY(0)'; this.style.boxShadow='0 4px 16px rgba(82, 206, 199, 0.3)';">
				{ai_solutions.cta_text}
				<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
					<line x1="5" y1="12" x2="19" y2="12"></line>
					<polyline points="12 5 19 12 12 19"></polyline>
				</svg>
			</a>
		</div>
	</div>
</section>
