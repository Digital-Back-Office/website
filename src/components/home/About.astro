---
import { getEntry } from "astro:content";

const Data = await getEntry("home", "home");

const about = Data.data.about;
const keyPoints = Data.data.keyPoints;

import { Image } from "astro:assets";
import stats from "/assets/images/home/stats.png";
import bulb from "/assets/images/home/bulb.png";
import cloud_key from "/assets/images/home/cloud_key.png";
---

<style>
    section {
        background-image: url(/assets/images/background_pattern.png);
    }

    .btn {
        color: #52cec7;
        border-color: #52cec7;
    }
</style>

<section class="position-relative py-5">
    <div
        class="container position-relative pt-3 pt-md-4 pt-lg-5 mt-lg-2 mt-xl-4"
    >
        <div
            class="row align-items-center py-4 py-md-5 my-1 my-sm-3 my-md-0 my-xl-3"
        >
            <div
                class="col-12 col-lg-6 offset-lg-1 offset-xl-2 order-lg-2 pb-5 mb-4"
            >
                <div class="parallax" style="max-width: 100%;">
                    <div class="parallax-layer" data-depth="0">
                        <div class="ratio" style="--ar-aspect-ratio: 89.6%">
                        </div>
                    </div>
                    <div
                        class="parallax-layer"
                        style="padding-right: 24.2%;"
                        data-depth="0.1"
                    >
                        <Image
                            src={stats}
                            class="d-dark-mode-block position-relative rounded-4"
                            style="top: 27.5%; max-widthdark: 482px;"
                            alt="Total users line chart"
                        />
                    </div>
                    <div
                        class="parallax-layer"
                        style="padding-left: 50%;"
                        data-depth="-0.12"
                    >
                        <Image
                            src={bulb}
                            class="d-dark-mode-block position-relative rounded-4"
                            style="top: 10%; max-width: 345px;"
                            alt="Traffic bar chart"
                        />
                    </div>
                    <div
                        class="parallax-layer"
                        style="padding-right: 7.547%; padding-left: 47.97%;"
                        data-depth="0.3"
                    >
                        <Image
                            src={cloud_key}
                            class="d-dark-mode-block position-relative rounded-4"
                            style="top: 60.75%; max-width: 302px;"
                            alt="Traffic donut chart"
                        />
                    </div>
                </div>
            </div>
            <div class="col-lg-5 col-xl-4 order-lg-1 text-center text-md-start">
                <h3 class="h2 mb-lg-4 text-white">{about.title}</h3>
                <p class="fs-lg pb-lg-2 mb-4 text-white opacity-70">
                    {about.info_part_1}
                    <br />
                    <br />
                    {about.info_part_2}
                </p>
                <a href="#" class="btn btn-outline-primary rounded-pill">
                    Learn more
                    <i class="ai-arrow-right fs-lg ms-2 me-n1"></i>
                </a>
            </div>
        </div>
    </div>

