---
const { frontmatter } = Astro.props

import Layout from "./Layout.astro";
import Navbar from "../components/common/Navbar.astro";
import Contact from "../components/common/Contact.astro";
---

<style>
    .hero {
        background: linear-gradient(100.88deg, #52cec7 9.71%, #002877 93.28%);
        position: relative;
    }

    .break {
        position: absolute;
        bottom: 0;
        background: #17191d;
        transform: matrix(1, 0, 0, -1, 0, 0);
        width: 100%;
        height: 100%;
    }

    .content {
        background-image: url("/assets/images/background_pattern.png");
        padding: 7rem 0;

        h3 {
            color: #fff;
        }

        p {
            color: #fff;
            opacity: 0.7;
        }
    }

</style>

<Layout>
    <Navbar />
    <main class="page-wrapper">
        <section class="hero">
            <!-- <div class="break"></div> -->
            <div class="container">
                <div class="row">
                    <div
                        class="col-lg-6 order-lg-2 d-flex justify-content-center justify-content-lg-end"
                    >
                        <img
                            src="/assets/images/policies/privacy_policy.png"
                            alt=""
                        />
                    </div>
                    <div class="col-lg-6 order-lg-1 mt-lg-5 pt-lg-5">
                        <h4
                            class="text-center text-lg-start fw-normal text-white mb-0"
                        >
                            Digital Back Office
                        </h4>
                        <h1 class="text-center text-lg-start text-white">
                            {frontmatter.title}
                        </h1>
                    </div>
                </div>
            </div>
        </section>
        <section class="content">
            <div class="container">
                <slot />
            </div>
        </section>
        <Contact />
    </main>
</Layout>
