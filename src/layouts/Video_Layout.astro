---
import Navbar from "../components/common/Navbar.astro";

export interface Props {
  src: string;
}

const { src } = Astro.props;
---

<style>
  .top-sec {
    position: relative;
    z-index: 2;
    /* height: 64rem; */
    width: 100%;
  }

  .top-sec::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      198deg,
      rgba(2, 2, 2, 0) 19.25%,
      #121519 74.45%
    );
    z-index: 2;
  }

  .hero-video {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    z-index: 1;
  }
</style>

<main>
  <div class="top-sec">
    <video class="hero-video" src={src} preload="auto" muted autoplay loop>
    </video>
    <Navbar />
    <slot />
  </div>
</main>
