---
import Header from "../components/Header.astro";
---

<style>
    .top-sec {
		position: relative;
		z-index: 2;
	}

	.top-sec::before {
		content: "";
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		background: linear-gradient(
			198.24deg,
			rgba(2, 2, 2, 0) 19.25%,
			#121519 74.45%
		);
		z-index: 2;
	}

	.hero-video {
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		object-fit: cover;
		z-index: 0;
	}

	.hero-section {
		font-family: "arimo";
	}

	.hero-section * {
		z-index: 3;
	}
</style>

<main>
    <video
        class="hero-video"
        src="/assets/videos/dbo_bg_video10.mp4"
        preload="auto"
        muted
        autoplay
        loop
    >
    </video>
    <Header />
    <slot />
</main>
