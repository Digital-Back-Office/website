---
import Navbar from "../components/common/Navbar.astro";

export interface Props {
  src: string;
}

const { src } = Astro.props;
---

<style>
  .hero-section {
    font-family: "arimo";
    width: 100%;
    height: 100%;
    max-height: 110vh;
    position: relative;
  }

  .hero-section::before {
    content: "";
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 100%;
    /* background-color: rgba(0,0,0,0.5); */

    background-image: linear-gradient(
      to right top,
      rgba(0, 0, 0, 0.8) 30%,
      rgba(10, 10, 10, 0.7) 50%,
      rgba(119, 119, 119, 0.2)
    );
  }

  .hero-video {
    width: 100%;
    height: 100%;
    object-fit: cover;
    z-index: 0;
  }

  .hero-section * {
    z-index: 3;
  }
  .item {
    background-color: rgba(255, 255, 255, 0.3);
<<<<<<< Updated upstream
  }
  .hero-text {
    position: absolute;
    top: 70vh;
    left: 0;
    right: 0;
    z-index: 10;
    color: white;

  }
</style>

<section class="hero-section">
  <video src={src} preload="auto" muted autoplay loop class="hero-video"
  ></video>

  <Navbar />
  <slot />
</section>
