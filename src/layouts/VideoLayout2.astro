---
import Navbar from "../components/common/Navbar.astro";

export interface Props {
  src: string;
}

const { src } = Astro.props;
---

<style>
  .hero-section {
    font-family: "arimo";
    width: 100%;
    height: 100%;
    max-height: 110vh;
    position: relative;
  }

  .hero-section::before {
    content: "";
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 100%;

    /* background-image: linear-gradient(0deg,
     rgba(20,20,20,1) 7%, 
    rgba(24,24,24, 0.4) 40%,
     rgba(30,30,30, 0.3) 80%, 
    rgba(35,35,35,0.4) 10%); */
    background-image: linear-gradient(to top, rgba(25, 25, 25, 1),
     rgba(30, 30, 30, 0.9), 
     rgba(35, 35, 35,0.8), 
     rgba(40, 40, 40,0.7), 
     rgba(50,50,50, 0.5), rgba(60,60,60, 0.3), rgba(70,70,70,0.1),
     rgba(60,60,60, 0.3),rgba(50,50,50, 0.5),
     rgba(40, 40,40,0.5),
    rgba(35, 35, 35, 0.8),
    rgba(30, 30, 30, 0.9),
    rgba(25, 25, 25, 1));
  }

  .hero-video {
    width: 100%;
    height: 100%;
    object-fit: cover;
    z-index: 0;
  }

  .hero-section * {
    z-index: 3;
  }
  .item {
    background-color: rgba(255, 255, 255, 0.3);
  }
  .hero-text {
    position: absolute;
    top: 70vh;
    left: 0;
    right: 0;
    z-index: 10;
    color: white;

  }
</style>

<section class="hero-section">
  <video src={src} preload="auto" muted autoplay loop class="hero-video"
  ></video>

  <Navbar />
  <slot />
</section>
