---
import Navbar from "../components/common/Navbar.astro";

export interface Props {
  src: string;
}

const { src } = Astro.props;
import '../styles/container.css'
---

<style>
  .hero-section {
    width: 100%;
    height: 100%;
    max-height: 110vh;
    position: relative;
  }

  .hero-section::before {
    content: "";
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(180deg, #121519 3.77%, rgba(26, 26, 26, 0.00) 52.82%, #121519 87.4%);

  }

  .hero-video {
    width: 100%;
    height: 100%;
    object-fit: cover;
    z-index: 0;
  }

  .hero-section * {
    z-index: 3;
  }
  .item {
    background-color: rgba(255, 255, 255, 0.3);
  }
  .hero-text {
    position: absolute;
    top: 70vh;
    left: 0;
    right: 0;
    z-index: 10;
    color: white;

  }
</style>

<section class="hero-section">
  <video src={src} preload="auto" muted autoplay loop class="hero-video"
  ></video>

  <Navbar />
  <slot />
</section>
