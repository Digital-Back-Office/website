---
import Footer from "../components/common/Footer.astro";
import "aos/dist/aos.css";
import "../styles/global.css";
import '../styles/container.css'

export interface Props {
  title?: string;
  description?: string;
  preview_image?:string;
  canonical?: string;
  keywords?: string;
  author?: string;
  type?: string;
}

const {
  title = "Digital Back Office - Expert AI & Analytics Services to Power Enterprise Operations",
  description = "Transform your business with enterprise-grade AI solutions, data engineering, and ML expertise. Trusted by global enterprises for AI strategy, RAG implementation, and data transformation.",
  preview_image = "/preview.jpg",
  canonical = Astro.url.pathname,
  keywords = "AI consulting, data engineering, machine learning, RAG implementation, AI agents, data strategy, enterprise AI",
  author = "Digital Back Office",
  type = "website"
} = Astro.props;

const og_description = description.length>200?description.substring(0, 200):description;
const canonicalURL = new URL(canonical, Astro.site || 'https://www.digitalbackoffice.co.uk');
const imageURL = new URL(preview_image, Astro.site || 'https://www.digitalbackoffice.co.uk');
---

<script src="/assets/js/theme.min.js" is:inline></script>
<script src="/src/scripts/aos-init.js"></script>
<script src="/src/scripts/navbar.js"></script>
<script src="/src/scripts/chat-bot.js"></script>
<script src="/src/scripts/cookie-consent.js"></script>

<html lang="en" data-bs-theme="dark">
  <head>
    <!-- Google tag (gtag.js) -->
    <script is:inline async src="https://www.googletagmanager.com/gtag/js?id=G-0BZVVEWYEV"></script>
    <script is:inline>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());

      gtag('config', 'G-0BZVVEWYEV');
    </script>
    <script src="https://t.contentsquare.net/uxa/96d450d7e9094.js"></script>
    <script is:inline>
        (function (c, s, q, u, a, r, e) {
            c.hj=c.hj||function(){(c.hj.q=c.hj.q||[]).push(arguments)};
            c._hjSettings = { hjid: a };
            r = s.getElementsByTagName('head')[0];
            e = s.createElement('script');
            e.async = true;
            e.src = q + c._hjSettings.hjid + u;
            r.appendChild(e);
        })(window, document, 'https://static.hj.contentsquare.net/c/csq-', '.js', 6573435);
    </script>
    <!-- Google Tag Manager -->
    <script is:inline>(function(w,d,s,l,i){w[l]=w[l]||[];w[l].push({'gtm.start':
    new Date().getTime(),event:'gtm.js'});var f=d.getElementsByTagName(s)[0],
    j=d.createElement(s),dl=l!='dataLayer'?'&l='+l:'';j.async=true;j.src=
    'https://www.googletagmanager.com/gtm.js?id='+i+dl;f.parentNode.insertBefore(j,f);
    })(window,document,'script','dataLayer','GTM-P7HC3N5L');</script>
    <!-- End Google Tag Manager -->
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/x-icon" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    
    <!-- SEO Meta Tags -->
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="keywords" content={keywords} />
    <meta name="author" content={author} />
    <link rel="canonical" href={canonicalURL} />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content={type} />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={og_description} />
    <meta property="og:image" content={imageURL} />
    <meta property="og:image:secure_url" content={imageURL} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:image:alt" content={title} />
    <meta property="og:site_name" content="Digital Back Office" />
    <meta property="og:locale" content="en_GB" />
    
    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content={canonicalURL} />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={og_description} />
    <meta name="twitter:image" content={imageURL} />
    <meta name="twitter:image:alt" content={title} />
    <meta name="twitter:site" content="@DigitalBackOffice" />
    <meta name="twitter:creator" content="@DigitalBackOffice" />
    
    <!-- Additional SEO -->
    <meta name="robots" content="index, follow, max-image-preview:large, max-snippet:-1, max-video-preview:-1" />
    <meta name="googlebot" content="index, follow" />
    
    <!-- Schema.org Organization Structured Data -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "Organization",
        "name": "Digital Back Office",
        "legalName": "Digital Back Office Ltd",
        "url": "https://www.digitalbackoffice.co.uk",
        "logo": "https://www.digitalbackoffice.co.uk/favicon.png",
        "description": "Premium AI and Data Consulting firm specializing in enterprise AI solutions, data engineering, and machine learning implementation.",
        "address": {
          "@type": "PostalAddress",
          "addressCountry": "GB"
        },
        "sameAs": [
          "https://www.linkedin.com/company/digital-back-office"
        ],
        "contactPoint": {
          "@type": "ContactPoint",
          "contactType": "Customer Service",
          "url": "https://www.digitalbackoffice.co.uk/contact-us"
        }
      }
    </script>
    
    <!-- Schema.org ProfessionalService Structured Data -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "ProfessionalService",
        "name": "Digital Back Office",
        "image": "https://www.digitalbackoffice.co.uk/preview.jpg",
        "description": "Enterprise AI and Data Consulting Services",
        "priceRange": "$$$",
        "address": {
          "@type": "PostalAddress",
          "addressCountry": "GB"
        },
        "areaServed": {
          "@type": "Place",
          "name": "Global"
        },
        "serviceType": [
          "AI Consulting",
          "Data Engineering",
          "Machine Learning",
          "Data Strategy",
          "RAG Implementation",
          "AI Agent Development"
        ]
      }
    </script>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/gh/orestbida/cookieconsent@3.0.0/dist/cookieconsent.css"
    />
    <link rel="stylesheet" href="/assets/css/theme.min.css" />
    <link rel="stylesheet" href="/assets/icons/around-icons.min.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Arimo:ital,wght@0,400..700;1,400..700&display=swap"
      rel="stylesheet"
    />
    
    <!-- Named slot for additional head content -->
    <slot name="head" />
  </head>
  <body style="background-color: black; height: max-content;">
    <noscript><iframe src="https://www.googletagmanager.com/ns.html?id=GTM-MLJ9M4LT"
    height="0" width="0" style="display:none;visibility:hidden"></iframe></noscript>
      
    <slot />
    <Footer />
  </body>
</html>
