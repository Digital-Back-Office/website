---
import Layout from "../layouts/Layout.astro";
import VideoLayout from "../layouts/VideoLayout.astro";
import Values from "../components/about-us/Values.astro";
import Contact from "../components/common/Contact.astro";
import Benefit from "../components/about-us/Benefit.astro";
import Hero from "../components/about-us/Hero.astro";
import Approach from '../components/about-us/Approach.astro'
import Mission from '../components/about-us/Mission.astro'

import '../styles/container.css'

// SEO metadata for About Us page
const seoTitle = \"About Us - Digital Back Office | Enterprise AI & Data Experts\";
const seoDescription = \"Meet the team behind Digital Back Office. We deliver custom AI solutions, data engineering, and ML expertise with a commitment to quality, honesty, and client success. Trusted by enterprises worldwide.\";
const seoKeywords = \"about digital back office, AI consulting team, data engineering experts, machine learning consultants, enterprise AI solutions, data strategy experts\";

---

<Layout
  title={seoTitle}
  description={seoDescription}
  keywords={seoKeywords}
  canonical=\"/about-us\"
>
  <main class="page-wrapper" data-pagefind-ignore>
    <VideoLayout src="/assets/videos/about_us_3.mp4">
      <Hero />
    </VideoLayout>

    <Mission />
    <Values />
    <Benefit />
    <Approach />
    <Contact />
  </main>
</Layout>