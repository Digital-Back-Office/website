---
import Layout from "../../layouts/Layout.astro";
import Navbar from "../../components/common/Navbar.astro";
const allPosts = await Astro.glob("../../pages/posts/*.mdx");
import Card from "../../components/blog/Card.astro";
import Consultation_form from "../../components/common/ConsultationForm.astro";

import '../../styles/container.css'

export async function getStaticPaths({ paginate }:any):Promise<any>{
  const allPosts = await Astro.glob("../../pages/posts/*.mdx");
  const pageSize = 6; 
  return paginate(allPosts, { pageSize: pageSize });
}
const {page} = Astro.props;
const pages = Array.from({length:page['lastPage']}, (_, index)=>index+1);
---

<style>
  main {
    background-color: black;
    min-height: 100vh;
    padding-bottom: 4rem;
  }
  a {
    color: white;
  }
  .wrapper{
    padding-top: 0 !important;
  }
  
  .hero-section {
    padding: 8rem 0 4rem;
    background: linear-gradient(135deg, rgba(82, 206, 199, 0.1) 0%, rgba(82, 206, 199, 0.05) 100%);
    margin-bottom: 3rem;
  }

  .hero-title {
    font-size: 3.5rem;
    font-weight: 700;
    color: #fff;
    margin-bottom: 1rem;
    line-height: 1.2;
  }

  .hero-subtitle {
    font-size: 1.25rem;
    color: rgba(255, 255, 255, 0.7);
    margin-bottom: 2rem;
    max-width: 700px;
  }

  .blog-card {
    background: rgba(255, 255, 255, 0.05);
    border-radius: 16px;
    overflow: hidden;
    transition: all 0.3s ease;
    border: 1px solid rgba(82, 206, 199, 0.1);
    height: 100%;
    display: flex;
    flex-direction: column;
    margin-bottom: 2rem;
  }

  .blog-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 20px 40px rgba(82, 206, 199, 0.2);
    border-color: rgba(82, 206, 199, 0.3);
  }

  .blog-card-image {
    width: 100%;
    height: 250px;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .blog-card:hover .blog-card-image {
    transform: scale(1.05);
  }

  .blog-card-body {
    padding: 2rem;
    flex-grow: 1;
    display: flex;
    flex-direction: column;
  }

  .blog-card-meta {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 1rem;
    flex-wrap: wrap;
  }

  .blog-card-meta-item {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.85rem;
    color: rgba(255, 255, 255, 0.6);
  }

  .blog-card-meta-item i {
    color: #52CEC7;
  }

  .blog-card-title {
    font-size: 1.5rem;
    font-weight: 600;
    color: #fff;
    margin-bottom: 1rem;
    line-height: 1.5;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    text-overflow: ellipsis;
    word-wrap: break-word;
  }

  .blog-card-description {
    font-size: 0.95rem;
    color: rgba(255, 255, 255, 0.7);
    margin-bottom: 1.5rem;
    flex-grow: 1;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
    text-overflow: ellipsis;
    line-height: 1.7;
    word-wrap: break-word;
  }

  .blog-card-footer {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding-top: 1rem;
    margin-top: auto;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .blog-card-tags {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
  }

  .blog-card-tag {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.4rem 0.8rem;
    background: rgba(82, 206, 199, 0.1);
    border-radius: 20px;
    font-size: 0.8rem;
    color: #52CEC7;
  }

  .pagination-custom {
    display: flex;
    gap: 0.5rem;
    justify-content: center;
    margin-top: 3rem;
    margin-bottom: 3rem;
  }

  .page-number {
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.05);
    color: rgba(255, 255, 255, 0.7);
    text-decoration: none;
    transition: all 0.3s ease;
    border: 1px solid transparent;
  }

  .page-number:hover {
    background: rgba(82, 206, 199, 0.1);
    color: #52CEC7;
    border-color: #52CEC7;
    transform: translateY(-2px);
  }

  .page-number.active {
    background: #52CEC7;
    color: #000;
    font-weight: 600;
  }

  .search-results-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 2rem;
    margin-top: 2rem;
    margin-bottom: 3rem;
  }

  .blog-grid {
    margin-bottom: 2rem;
  }
  
  .wide{
    width: fit-content !important;
  }
  .disabled-link {
    pointer-events: none;
    color: rgba(255,255,255,70%)
  }

  .content-container {
    min-height: calc(100vh - 200px);
    padding-bottom: 4rem;
  }

  @media (max-width: 992px) {
    .forum{
      max-width: 99% !important;
      position: relative !important;
      left: 3rem; top: 0rem !important;
    }
    .hero-title {
      font-size: 2.5rem;
    }
    .search-results-grid {
      grid-template-columns: 1fr;
    }
  }

  @media (max-width: 576px) {
    .hero-section {
      padding: 6rem 0 3rem;
    }
    .hero-title {
      font-size: 2rem;
    }
    .blog-card-image {
      height: 200px;
    }
    main {
      padding-bottom: 6rem;
    }
  }
  
</style>

<Layout>
  <Navbar />
  <main
    class="page-wrapper wrapper"
    style="background-image: url(/assets/images/background-pattern.png);"
    data-pagefind-ignore
  >
    <!-- Hero Section -->
    <section class="hero-section">
      <div class="container text-center">
        <h1 class="hero-title">Insights & Stories</h1>
        <p class="hero-subtitle mx-auto">
          Discover the latest insights on data, AI, and digital transformation
        </p>
      </div>
    </section>

    <div class="container pt-3 pb-lg-5 pb-md-4 pb-2 mb-5 content-container">
      <div class="row mb-md-2 mb-xl-4">
        <!-- Blog posts -->
        <div class="col-lg-9 pe-lg-4 pe-xl-5">
          <div id="results"></div>
          
          <!-- Search box -->
          <div class="position-relative mb-4 mb-lg-5">
            <i
              class="ai-search position-absolute top-50 start-0 translate-middle-y ms-3"
            ></i>
            <input
              id="search"
              class="form-control ps-5"
              type="search"
              placeholder="Enter keyword"
            />
          </div>

          <!-- Blog Cards Grid -->
          <div id="blog-grid" class="row g-4 blog-grid">
            {
              (page['data'] as Object[]).map((post:any) => (
                <div class="col-md-6">
                  <a href={post.url} style="text-decoration: none;">
                    <article class="blog-card">
                      <div style="overflow: hidden;">
                        <img 
                          src={post.frontmatter.image} 
                          alt={post.frontmatter.title}
                          class="blog-card-image"
                        />
                      </div>
                      <div class="blog-card-body">
                        <div class="blog-card-meta">
                          {post.frontmatter.author && (
                            <span class="blog-card-meta-item">
                              <i class="ai-user"></i>
                              {post.frontmatter.author}
                            </span>
                          )}
                          {post.frontmatter.date && (
                            <span class="blog-card-meta-item">
                              <i class="ai-calendar"></i>
                              {new Date(post.frontmatter.date).toLocaleDateString('en-US', { 
                                year: 'numeric', 
                                month: 'short', 
                                day: 'numeric' 
                              })}
                            </span>
                          )}
                          {post.frontmatter.readingTime && (
                            <span class="blog-card-meta-item">
                              <i class="ai-time"></i>
                              {post.frontmatter.readingTime}
                            </span>
                          )}
                        </div>
                        <h3 class="blog-card-title">{post.frontmatter.title}</h3>
                        <p class="blog-card-description">{post.frontmatter.description}</p>
                        <div class="blog-card-footer">
                          <div class="blog-card-tags">
                            {post.frontmatter.categories && post.frontmatter.categories.map((category: string) => (
                              <span class="blog-card-tag">
                                <i class="ai-tag"></i>
                                {category}
                              </span>
                            ))}
                            {!post.frontmatter.categories && (
                              <span class="blog-card-tag">
                                <i class="ai-file-text"></i>
                                Blog Post
                              </span>
                            )}
                          </div>
                        </div>
                      </div>
                    </article>
                  </a>
                </div>
              ))
            }
          </div>

          <!-- Pagination -->
          <div class="pagination-custom">
            {
              pages.map((pageNo)=>{
                return (
                  <a 
                    class={page['currentPage']===pageNo ? "page-number active" : "page-number"} 
                    href={"/blog/"+pageNo}
                  >
                    {pageNo}
                  </a>
                )
              })
            }
          </div>
        </div>

        <!-- Sidebar (offcanvas on sreens < 992px) -->
        <aside class="col-lg-3">
          <div class="offcanvas-lg offcanvas-end" id="sidebarBlog" style="height: 100%;">
            <div class="offcanvas-header">
              <h4 class="offcanvas-title">Sidebar</h4>
              <button
                class="btn-close ms-auto"
                type="button"
                data-bs-dismiss="offcanvas"
                data-bs-target="#sidebarBlog"
                aria-label="Close"></button>
            </div>
            <div class="offcanvas-body" style=" height:100%; padding-bottom:1rem;">
              

              <!-- Category links -->
              <div
                class="col contact-div offset-xxl-1 pt-sm-3 sticky-top forum"
                style="margin-right: -50px; top:6rem;  z-index:5;"
              >
                <!-- Contact form -->
                <div
                  id="sticky-component"
                  class="card contact-form border-0"
                  style=""
                >
                  <Consultation_form/>
                </div>
              </div>
            </div>
          </div>
        </aside>
      </div>
    </div>

    <!-- Sidebar toggle button -->
    <button
      class="d-lg-none btn btn-sm fs-sm btn-primary w-100 rounded-0 fixed-bottom"
      type="button"
      data-bs-toggle="offcanvas"
      data-bs-target="#sidebarBlog"
    >
      <i class="ai-layout-column me-2"></i>
      Sidebar
    </button>
  </main>
</Layout>



<script is:inline>
  document.querySelector('#search')?.addEventListener('input', async (e) => {
    const blogGrid = document.querySelector('#blog-grid');
    const resultsDiv = document.querySelector('#results');
    
    if (e.target.value.trim() === '') {
      blogGrid.style.display = '';
      resultsDiv.innerHTML = '';
      return;
    }

    // hide the blog grid when searching
    blogGrid.style.display = 'none';

    // only load the pagefind script once
    if (e.target.dataset.loaded !== 'true') {
      e.target.dataset.loaded = 'true'
      // load the pagefind script
      window.pagefind = await import("/pagefind/pagefind.js");
    }

    // search the index using the input value
    const search = await window.pagefind.search(e.target.value)

    // clear the old results
    resultsDiv.innerHTML = `<h2 style="color: #fff; margin-bottom: 2rem;">Search Results</h2><div class="search-results-grid"></div>`

    const resultsGrid = resultsDiv.querySelector('.search-results-grid');

    // add the new results
    for (const result of search.results) {
      const data = await result.data()
      
      resultsGrid.innerHTML += `
        <a href="${data.url}" style="text-decoration: none;">
          <article class="blog-card">
            <div class="blog-card-body">
              <div class="blog-card-meta">
                ${data.meta.author ? `
                  <span class="blog-card-meta-item">
                    <i class="ai-user"></i>
                    ${data.meta.author}
                  </span>
                ` : ''}
                ${data.meta.date ? `
                  <span class="blog-card-meta-item">
                    <i class="ai-calendar"></i>
                    ${new Date(data.meta.date).toLocaleDateString('en-US', { 
                      year: 'numeric', 
                      month: 'short', 
                      day: 'numeric' 
                    })}
                  </span>
                ` : ''}
              </div>
              <h3 class="blog-card-title">${data.meta.title}</h3>
              <p class="blog-card-description">${data.excerpt}</p>
              <div class="blog-card-footer">
                <span class="blog-card-tag">
                  <i class="ai-search"></i>
                  Search Result
                </span>
              </div>
            </div>
          </article>
        </a>`
    }
  })
</script>