---
import Layout from '../../layouts/Layout.astro';
import Navbar from '../../components/common/Navbar.astro';
import Contact from '../../components/common/Contact.astro';

const pageTitle = "Finance and Insurance";
const pageDescription = "We build the secure, Explainable AI (XAI) and Cloud Data Strategy foundation needed for competitive innovation, compliance, and scale in modern finance and insurance.";
---

<style>
    body {
        background-image: url(/assets/images/background-pattern.png);
        background-repeat: repeat;
        background-attachment: fixed;
    }
    
    .hero-section {
        background-image: url(/assets/images/background-pattern.png);
        background-repeat: repeat;
        padding: 8rem 0 6rem;
        min-height: 110vh;
        display: flex;
        align-items: center;
        position: relative;
        overflow: hidden;
    }
    
    .hero-section::after {
        content: '';
        position: absolute;
        bottom: 0;
        left: 0;
        width: 100%;
        height: 50%;
        background: linear-gradient(
            to bottom,
            rgba(18, 21, 25, 0) 0%,
            rgba(18, 21, 25, 0.8) 50%,
            #121519 100%
        );
        z-index: 0;
        pointer-events: none;
    }
    
    .hero-section > * {
        position: relative;
        z-index: 10;
    }
    
    .hero-heading {
        font-size: 3.5rem;
        font-weight: 700;
        line-height: 1.2;
        margin-bottom: 1.5rem;
    }
    
    .hero-subtext {
        font-size: 1.5rem;
        font-weight: 400;
        line-height: 1.6;
        color: rgba(255, 255, 255, 0.85);
        margin-bottom: 2.5rem;
        max-width: 900px;
    }
    
    .trust-line {
        font-size: 2.25rem;
        font-weight: 700;
        color: rgba(255, 255, 255, 0.9);
        margin-top: 3rem;
        max-width: 1200px;
        text-align: center;
        margin-left: auto;
        margin-right: auto;
        line-height: 1.1;
    }
    .trust-section {
        padding: 2.5rem 0 4rem;
        background-color: transparent;
    }
    
    .hero-cta-btn {
        font-size: 1.25rem;
        padding: 1rem 2.5rem;
        font-weight: 600;
        background-color: #2fb7b8;
        border-color: #2fb7b8;
        color: #fff;
        transition: all 0.3s ease;
        border-radius: 50px;
    }
    
    .hero-cta-btn:hover {
        background-color: transparent;
        border-color: #2fb7b8;
        color: #2fb7b8;
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(47, 183, 184, 0.3);
    }
    
    .barriers-section {
        padding: 5rem 0;
        background-color: transparent;
    }
    
    .barriers-heading {
        font-size: 2.75rem;
        font-weight: 700;
        line-height: 1.3;
        color: #fff;
        margin-bottom: 2rem;
    }
    
    .barriers-subtext {
        font-size: 1.125rem;
        line-height: 1.6;
        color: rgba(255, 255, 255, 0.75);
        margin-bottom: 0;
    }
    
    .barrier-card {
        background-color: #0d1b2a;
        border-radius: 12px;
        padding: 2.5rem 2rem;
        margin-bottom: 1.5rem;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        height: 100%;
    }
    
    .barrier-card:hover {
        transform: translateY(-4px);
        box-shadow: 0 8px 24px rgba(47, 183, 184, 0.15);
    }
    
    .barrier-title {
        font-size: 1.75rem;
        font-weight: 700;
        color: #fff;
        margin-bottom: 1rem;
    }
    
    .barrier-text {
        font-size: 1.125rem;
        line-height: 1.6;
        color: rgba(255, 255, 255, 0.8);
        margin-bottom: 0;
    }
    
    .products-section {
        padding: 5rem 0;
        background-color: transparent;
    }
    
    .products-title {
        font-size: 2.75rem;
        font-weight: 700;
        color: #fff;
        margin-bottom: 1rem;
    }
    
    .products-title span {
        color: #52CEC7;
    }
    
    .products-subtitle {
        font-size: 1.25rem;
        font-weight: 400;
        color: rgba(255, 255, 255, 0.75);
        margin-bottom: 3rem;
    }
    
    .nav-tabs {
        border-bottom: 2px solid rgba(255, 255, 255, 0.1);
        margin-bottom: 3rem;
    }
    
    .nav-tabs .nav-link {
        color: rgba(255, 255, 255, 0.6);
        font-size: 1.25rem;
        font-weight: 600;
        padding: 1rem 2rem;
        border: none;
        border-bottom: 3px solid transparent;
        background: transparent;
        transition: all 0.3s ease;
    }
    
    .nav-tabs .nav-link:hover {
        color: rgba(255, 255, 255, 0.9);
        border-bottom-color: rgba(82, 206, 199, 0.5);
    }
    
    .nav-tabs .nav-link.active {
        color: #fff;
        background: transparent;
        border-bottom-color: #52CEC7;
    }
    
    .tab-content-heading {
        font-size: 2rem;
        font-weight: 700;
        color: #fff;
        margin-bottom: 1.5rem;
    }
    
    .tab-content-text {
        font-size: 1.125rem;
        line-height: 1.7;
        color: rgba(255, 255, 255, 0.85);
        max-width: 800px;
    }
    
    .tab-pane {
        min-height: 200px;
    }
    
    .tab-content-box {
        background-color: rgba(255, 255, 255, 0.03);
        border-radius: 12px;
        padding: 3rem 2.5rem;
        border: 1px solid rgba(255, 255, 255, 0.08);
    }
    
    .tab-cta-btn {
        font-size: 1.125rem;
        padding: 0.875rem 2rem;
        font-weight: 600;
        background-color: transparent;
        border: 2px solid #52CEC7;
        color: #52CEC7;
        transition: all 0.3s ease;
        border-radius: 50px;
        margin-top: 1.5rem;
        display: inline-block;
        text-decoration: none;
    }
    
    .tab-cta-btn:hover {
        background-color: #52CEC7;
        border-color: #52CEC7;
        color: #000;
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(82, 206, 199, 0.3);
    }
    
    .why-trust-section {
        padding: 5rem 0;
        background-color: transparent;
    }
    
    .why-trust-heading {
        font-size: 2.75rem;
        font-weight: 700;
        color: #fff;
        text-align: center;
        margin-bottom: 3rem;
    }
    
    .trust-card {
        background-color: rgba(255, 255, 255, 0.03);
        border-radius: 12px;
        padding: 2.5rem 2rem;
        height: 100%;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        border: 1px solid rgba(255, 255, 255, 0.08);
    }
    
    .trust-card:hover {
        transform: translateY(-4px);
        box-shadow: 0 8px 24px rgba(47, 183, 184, 0.15);
    }
    
    .trust-card-icon {
        width: 60px;
        height: 60px;
        margin: 0 auto 1.5rem;
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: rgba(82, 206, 199, 0.1);
        border-radius: 12px;
    }
    
    .trust-card-icon svg {
        width: 32px;
        height: 32px;
        color: #52CEC7;
    }
    
    .trust-card-title {
        font-size: 1.5rem;
        font-weight: 700;
        color: #fff;
        text-align: center;
        margin-bottom: 1rem;
    }
    
    .trust-card-text {
        font-size: 1rem;
        line-height: 1.6;
        color: rgba(255, 255, 255, 0.8);
        text-align: center;
    }
    
    @media (max-width: 768px) {
        .hero-heading {
            font-size: 2.5rem;
        }
        .hero-subtext {
            font-size: 1.25rem;
        }
        .trust-line {
            font-size: 1.25rem;
        }
        .barriers-heading {
            font-size: 2rem;
        }
        .barrier-title {
            font-size: 1.5rem;
        }
        .products-title {
            font-size: 2rem;
        }
        .tab-content-heading {
            font-size: 1.5rem;
        }
        .nav-tabs .nav-link {
            font-size: 1rem;
            padding: 0.75rem 1rem;
        }
        .why-trust-heading {
            font-size: 2rem;
        }
        .trust-card-title {
            font-size: 1.25rem;
        }
    }
</style>

<Layout title={pageTitle} description={pageDescription}>
    <Navbar />
    <main>
        <script src="https://unpkg.com/@lottiefiles/lottie-player@latest/dist/lottie-player.js"></script>
        <section class="hero-section" style="position: relative; overflow: hidden;">
            <video autoplay muted loop playsinline style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; object-fit: cover; z-index: 0; opacity: 0.3;">
                <source src="/assets/videos/finance-hero-video.mp4" type="video/mp4">
            </video>
            <div class="container" style="position: relative; z-index: 1;">
                <div class="row">
                    <div class="col-12">
                        <h1 class="hero-heading">Financial Services Transformation: Moving from Regulatory Risk to Predictive Growth</h1>
                        <p class="hero-subtext">We build the secure, Explainable AI (XAI) and Cloud Data Strategy foundation needed for competitive innovation, compliance, and scale in modern finance and insurance.</p>
                        <a href="/contact-us" class="btn hero-cta-btn">Schedule a Free 30-Minute AI Readiness Assessment</a>
                    </div>
                </div>
            </div>
        </section>
        <section class="trust-section">
            <div class="container">
                <div class="row">
                    <div class="col-12">
                        <p class="trust-line">Built by a leadership team with <span style="color: #52CEC7;">15+</span> years of experience scaling secure data platforms for global financial institutions.</p>
                    </div>
                </div>
            </div>
        </section>
        
        <section class="barriers-section">
            <div class="container">
                <div class="row align-items-start">
                    <div class="col-lg-5 mb-4 mb-lg-0">
                        <h2 class="barriers-heading">The Critical Barriers Slowing Down Financial Innovation</h2>
                        
                    </div>
                    <div class="col-lg-7">
                        <div class="barrier-card">
                            <h3 class="barrier-title">1. The 25% Onboarding Drop-Off</h3>
                            <p class="barrier-text">Stop bleeding revenue at the final hurdle. 1 in 4 business customers abandon onboarding due to confusing processes. Manual KYC and fragmented document requests are actively pushing your hard-won clients to frictionless, digital-native competitors.</p>
                        </div>
                        <div class="barrier-card">
                            <h3 class="barrier-title">2. The "Moment of Truth" Failure: Claims Delays</h3>
                            <p class="barrier-text">Customer trust isn't lost on the payout; it's lost on the wait. 65% of all complaints stem from claim handling delays, not the outcome. Your team is stuck "managing" claims bogged down by unstructured data, instead of "resolving" them instantly.</p>
                        </div>
                        <div class="barrier-card">
                            <h3 class="barrier-title">3. Regulatory "Whack-a-Mole": DORA & The AI Act</h3>
                            <p class="barrier-text">Your compliance team is drowning in spreadsheets while the risk becomes systemic. With the Digital Operational Resilience Act (DORA) and the EU AI Act now in force, it is no longer humanly possible to manually track and map compliance.</p>
                        </div>
                        <div class="barrier-card">
                            <h3 class="barrier-title">4. The "POC Purgatory" Trap</h3>
                            <p class="barrier-text">Your AI investments are failing to deliver ROI. You're stuck in "POC Purgatory" because 46% of AI concepts are abandoned before deployment. The problem? Your models are being built on "zombie data" trapped in legacy silos.</p>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        
        <section class="products-section">
            <div class="container">
                <h2 class="products-title"><span>Our Services,</span> your ease</h2>
                <div style="display:inline-block; vertical-align: middle; margin-left: 1rem;">
            
                </div>
                <p class="products-subtitle">Your Next-Generation Financial Strategy: Built on DBO's Proven Framework</p>
                
                <ul class="nav nav-tabs" id="productsTab" role="tablist">
                    <li class="nav-item" role="presentation">
                        <button class="nav-link active" id="data-strategy-tab" data-bs-toggle="tab" data-bs-target="#data-strategy" type="button" role="tab" aria-controls="data-strategy" aria-selected="true">
                            Data Strategy
                        </button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link" id="ai-solutions-tab" data-bs-toggle="tab" data-bs-target="#ai-solutions" type="button" role="tab" aria-controls="ai-solutions" aria-selected="false">
                            AI Solutions
                        </button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link" id="data-science-tab" data-bs-toggle="tab" data-bs-target="#data-science" type="button" role="tab" aria-controls="data-science" aria-selected="false">
                            Data Science
                        </button>
                    </li>
                </ul>
                
                <div class="tab-content" id="productsTabContent">
                    <div class="tab-pane fade show active" id="data-strategy" role="tabpanel" aria-labelledby="data-strategy-tab">
                        <div class="row align-items-center">
                            <div class="col-lg-7">
                                <div class="tab-content-box">
                                    <h3 class="tab-content-heading" style="margin-bottom: 2rem;">Automated Compliance & AI-Ready Foundations</h3>
                                    
                                    <h4 class="tab-content-heading" style="font-size: 1.25rem;">Audit-Ready Governance (DORA & AI Act)</h4>
                                    <p class="tab-content-text">We move you from spreadsheets to sanity. Our Data Strategy services build your DORA-compliant Data Governance framework, with full data lineage to make you 'audit-ready' by default.</p>
                                    
                                    <h4 class="tab-content-heading" style="margin-top: 2rem; font-size: 1.25rem;">Cure "POC Purgatory"</h4>
                                    <p class="tab-content-text">We are the cure for POC Purgatory. Our Data Modernisation strategy and Data Readiness Assessments build the Unified Data Platform your AI models need to move from lab to production and deliver ROI.</p>
                                    
                                    <a href="/contact-us" class="btn tab-cta-btn">Talk to our Strategists</a>
                                </div>
                            </div>
                            <div class="col-lg-5">
                                <div style="background-color: rgba(255, 255, 255, 0.03); border-radius: 12px; padding: 2rem; border: 1px solid rgba(255, 255, 255, 0.08); display: flex; align-items: center; justify-content: center;">
                                    <img src="/assets/images/Finance/data strategy.png" alt="Strategy Finance" style="max-width: 100%; height: auto; border-radius: 8px;">
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="tab-pane fade" id="ai-solutions" role="tabpanel" aria-labelledby="ai-solutions-tab">
                        <div class="row align-items-center">
                            <div class="col-lg-7">
                                <div class="tab-content-box">
                                    <h3 class="tab-content-heading" style="margin-bottom: 2rem;">Frictionless Onboarding & Instant Claims</h3>
                                    
                                    <h4 class="tab-content-heading" style="font-size: 1.25rem;">The "Day 0" Welcome (Solves 25% Drop-off)</h4>
                                    <p class="tab-content-text">We deploy Intelligent Document Processing (IDP) and NLP to instantly read, verify, and validate KYC/AML documents. This eliminates manual data entry and cuts verification time from days to seconds.</p>
                                    
                                    <h4 class="tab-content-heading" style="margin-top: 2rem; font-size: 1.25rem;">Straight-Through Processing (Solves Claims Delays)</h4>
                                    <p class="tab-content-text">We use NLP to understand unstructured adjuster notes and Computer Vision to assess claim photos. This allows 80%+ of claims to be processed automatically, turning "managing" into "resolving."</p>
                                    
                                    <a href="/contact-us" class="btn tab-cta-btn">See our AI in Action</a>
                                </div>
                            </div>
                            <div class="col-lg-5">
                                <div style="background-color: rgba(255, 255, 255, 0.03); border-radius: 12px; padding: 2rem; border: 1px solid rgba(255, 255, 255, 0.08); display: flex; align-items: center; justify-content: center;">
                                    <img src="/assets/images/Finance/ai automation (1).png" alt="AI Automation Finance" style="max-width: 100%; height: auto; border-radius: 8px;">
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="tab-pane fade" id="data-science" role="tabpanel" aria-labelledby="data-science-tab">
                        <div class="row align-items-center">
                            <div class="col-lg-7">
                                <div class="tab-content-box">
                                    <h3 class="tab-content-heading" style="margin-bottom: 2rem;">Predictive Models That Deliver Real-World ROI</h3>
                                    
                                    <h4 class="tab-content-heading" style="font-size: 1.25rem;">From "Managing" to "Resolving" Claims</h4>
                                    <p class="tab-content-text">Our Data Science models are the core of auto-adjudication. We build and deploy real-time fraud detection and predictive models to instantly flag high-risk claims and approve simple ones.</p>
                                    
                                    <h4 class="tab-content-heading" style="margin-top: 2rem; font-size: 1.25rem;">From "Lab" to "Production" (Solves POC Purgatory)</h4>
                                    <p class="tab-content-text">Our MLOps experts ensure your models actually make it to production. We build the scalable, monitored, and automated pipelines to deploy your data science work into real-world operations.</p>
                                    
                                    <a href="/contact-us" class="btn tab-cta-btn">Talk to our Data Scientists</a>
                                </div>
                            </div>
                            <div class="col-lg-5">
                                <div style="background-color: rgba(255, 255, 255, 0.03); border-radius: 12px; padding: 2rem; border: 1px solid rgba(255, 255, 255, 0.08); display: flex; align-items: center; justify-content: center;">
                                    <img src="/assets/images/Finance/data science finance.png" alt="Data Science Finance" style="max-width: 100%; height: auto; border-radius: 8px;">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        
        <section class="why-trust-section">
            <div class="container">
                <h2 class="why-trust-heading">Why Trust Us: <span style="color: #52CEC7;">Our Specialized Approach</span></h2>
                
                <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
                    <div class="col">
                        <div class="trust-card">
                            <div class="trust-card-icon">
                                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
                                </svg>
                            </div>
                            <h3 class="trust-card-title">Finance-Native Expertise</h3>
                            <p class="trust-card-text">We aren't generalists. From complex KYC/AML workflows to regulatory reporting, we build "compliance-by-design" solutions that natively understand the high-stakes requirements of the financial sector.</p>
                        </div>
                    </div>
                    
                    <div class="col">
                        <div class="trust-card">
                            <div class="trust-card-icon">
                                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
                                </svg>
                            </div>
                            <h3 class="trust-card-title">Explainable AI (XAI) & Security</h3>
                            <p class="trust-card-text">We don't build "black boxes." We build Explainable AI architectures that provide clear, auditable reasoning for every decision. Combined with ISO 27001 security standards, our solutions satisfy both your internal risk committees and external regulators like DORA.</p>
                        </div>
                    </div>
                    
                    <div class="col">
                        <div class="trust-card">
                            <div class="trust-card-icon">
                                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4" />
                                </svg>
                            </div>
                            <h3 class="trust-card-title">Production-Ready ROI</h3>
                            <p class="trust-card-text">We cure "POC Purgatory." By prioritizing a unified data foundation and rigorous MLOps, we bridge the gap between the lab and the real world, deploying scalable models that deliver measurable business value.</p>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        
        <Contact />
    </main>
</Layout>
