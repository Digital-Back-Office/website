---
import Layout from '../../layouts/Layout.astro';
import Navbar from '../../components/common/Navbar.astro';
import Contact from '../../components/common/Contact.astro';
import { getCollection } from 'astro:content';
import "../../styles/industry.css"

export async function getStaticPaths() {
    const industries = await getCollection('industries');
    return industries.map(industry => ({
        params: { slug: industry.slug },
        props: { industry }
    }));
}

const { industry } = Astro.props;
const { Content } = await industry.render();
const data = industry.data;
---

<Layout title={data.title} description={data.description}>
    <Navbar />
    <main>
        <section class="hero-section" style="position: relative; overflow: hidden;">
            {data.hero?.video && (
                <video autoplay muted loop playsinline style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; object-fit: cover; z-index: 0; opacity: 0.3;">
                    <source src={data.hero.video} type="video/mp4">
                </video>
            )}
            <div class="container" style="position: relative; z-index: 1;">
                <div class="row">
                    <div class="col-12">
                        <h1 class="hero-heading">{data.hero?.heading}</h1>
                        <p class="hero-subtext">{data.hero?.subtext}</p>
                        {data.hero?.cta_text && (
                            <a href={data.hero.cta_link || '/contact-us'} class="btn hero-cta-btn">
                                {data.hero.cta_text}
                            </a>
                        )}
                    </div>
                </div>
            </div>
        </section>

        {data.trust?.line && (
            <section class="trust-section">
                <div class="container">
                    <div class="row">
                        <div class="col-12">
                            <p class="trust-line" set:html={data.trust.line}></p>
                        </div>
                    </div>
                </div>
            </section>
        )}
        
        {data.barriers && (
            <section class="barriers-section">
                <div class="container">
                    <div class="row align-items-start">
                        <div class="col-lg-5 mb-4 mb-lg-0" style="height: -webkit-fill-available;">
                            <h2 class="barriers-heading">{data.barriers.heading}</h2>
                        </div>
                        <div class="col-lg-7">
                            {data.barriers.cards?.map((card: any) => (
                                <div class="barrier-card">
                                    <h3 class="barrier-title">{card.title}</h3>
                                    <p class="barrier-text">{card.description}</p>
                                </div>
                            ))}
                        </div>
                    </div>
                </div>
            </section>
        )}
        
        {data.products && (
            <section class="products-section">
                <div class="container">
                    <h2 class="products-title"><span>Our Services,</span> your ease</h2>
                    <p class="products-subtitle">{data.products.subtitle}</p>
                    
                    <ul class="nav nav-tabs" id="productsTab" role="tablist">
                        {data.products.tabs?.map((tab: any, index: number) => (
                            <li class="nav-item" role="presentation">
                                <button 
                                    class={`nav-link ${index === 0 ? 'active' : ''}`}
                                    id={`${tab.id}-tab`}
                                    data-bs-toggle="tab" 
                                    data-bs-target={`#${tab.id}`}
                                    type="button" 
                                    role="tab" 
                                    aria-controls={tab.id}
                                    aria-selected={index === 0 ? 'true' : 'false'}
                                >
                                    {tab.name}
                                </button>
                            </li>
                        ))}
                    </ul>
                    
                    <div class="tab-content" id="productsTabContent">
                        {data.products.tabs?.map((tab: any, index: number) => (
                            <div 
                                class={`tab-pane fade ${index === 0 ? 'show active' : ''}`}
                                id={tab.id}
                                role="tabpanel" 
                                aria-labelledby={`${tab.id}-tab`}
                            >
                                <div class="row align-items-center">
                                    <div class="col-lg-7">
                                        <div class="tab-content-box">
                                            <h3 class="tab-content-heading" style="margin-bottom: 2rem;">
                                                {tab.heading}
                                            </h3>
                                            
                                            {tab.sections?.map((section: any) => (
                                                <>
                                                    <h4 class="tab-content-heading" style="font-size: 1.25rem; margin-top: 2rem;">
                                                        {section.subheading}
                                                    </h4>
                                                    <p class="tab-content-text">{section.description}</p>
                                                </>
                                            ))}
                                            
                                            <a href={tab.cta_link || '/contact-us'} class="btn tab-cta-btn">
                                                {tab.cta_text}
                                            </a>
                                        </div>
                                    </div>
                                    <div class="col-lg-5">
                                        <div style="background-color: rgba(255, 255, 255, 0.03); border-radius: 12px; padding: 2rem; border: 1px solid rgba(255, 255, 255, 0.08); display: flex; align-items: center; justify-content: center;">
                                            <img 
                                                src={tab.image} 
                                                alt={tab.image_alt || tab.name}
                                                style="max-width: 100%; height: auto; border-radius: 8px;"
                                            />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        ))}
                    </div>
                </div>
            </section>
        )}
        
        {data.why_trust && (
            <section class="why-trust-section">
                <div class="container">
                    <h2 class="why-trust-heading" set:html={data.why_trust.heading}></h2>
                    
                    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
                        {data.why_trust.cards?.map((card: any) => (
                            <div class="col">
                                <div class="trust-card">
                                    <div class="trust-card-icon">
                                        {card.icon === 'shield-check' && (
                                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
                                            </svg>
                                        )}
                                        {card.icon === 'lock' && (
                                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
                                            </svg>
                                        )}
                                        {card.icon === 'clipboard-check' && (
                                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4" />
                                            </svg>
                                        )}
                                    </div>
                                    <h3 class="trust-card-title">{card.title}</h3>
                                    <p class="trust-card-text">{card.description}</p>
                                </div>
                            </div>
                        ))}
                    </div>
                </div>
            </section>
        )}
        
        <Contact />
    </main>
</Layout>
