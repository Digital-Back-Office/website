---
import Layout from '../../layouts/Layout.astro';
import Navbar from '../../components/common/Navbar.astro';
import Contact from '../../components/common/Contact.astro';

const pageTitle = "Retail and E-commerce";
const pageDescription = "Deploy Retrieval Augmented Generation (RAG) and Predictive Modeling for Sales to transform customer experience, eliminate stockouts, and maximize lifetime value.";
---

<style>
    body {
        background-image: url(/assets/images/background-pattern.png);
        background-repeat: repeat;
        background-attachment: fixed;
    }
    
    .hero-section {
        background-image: url(/assets/images/background-pattern.png);
        background-repeat: repeat;
        padding: 8rem 0 6rem;
        min-height: 110vh;
        display: flex;
        align-items: center;
        position: relative;
        overflow: hidden;
    }
    
    .hero-section::after {
        content: '';
        position: absolute;
        bottom: 0;
        left: 0;
        width: 100%;
        height: 50%;
        background: linear-gradient(
            to bottom,
            rgba(18, 21, 25, 0) 0%,
            rgba(18, 21, 25, 0.8) 50%,
            #121519 100%
        );
        z-index: 0;
        pointer-events: none;
    }
    
    .hero-section > * {
        position: relative;
        z-index: 10;
    }
    
    .hero-heading {
        font-size: 3.5rem;
        font-weight: 700;
        line-height: 1.2;
        margin-bottom: 1.5rem;
    }
    
    .hero-subtext {
        font-size: 1.5rem;
        font-weight: 400;
        line-height: 1.6;
        color: rgba(255, 255, 255, 0.85);
        margin-bottom: 2.5rem;
        max-width: 900px;
    }
    
    .trust-line {
        font-size: 2.25rem;
        font-weight: 700;
        color: rgba(255, 255, 255, 0.9);
        margin-top: 3rem;
        max-width: 1200px;
        text-align: center;
        margin-left: auto;
        margin-right: auto;
        line-height: 1.1;
    }
    .trust-section {
        padding: 2.5rem 0 4rem;
        background-color: transparent;
    }
    
    .hero-cta-btn {
        font-size: 1.25rem;
        padding: 1rem 2.5rem;
        font-weight: 600;
        background-color: #2fb7b8;
        border-color: #2fb7b8;
        color: #fff;
        transition: all 0.3s ease;
        border-radius: 50px;
    }
    
    .hero-cta-btn:hover {
        background-color: transparent;
        border-color: #2fb7b8;
        color: #2fb7b8;
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(47, 183, 184, 0.3);
    }
    
    .barriers-section {
        padding: 5rem 0;
        background-color: transparent;
    }
    
    .barriers-heading {
        font-size: 2.75rem;
        font-weight: 700;
        line-height: 1.3;
        color: #fff;
        margin-bottom: 2rem;
    }
    
    .barriers-subtext {
        font-size: 1.125rem;
        line-height: 1.6;
        color: rgba(255, 255, 255, 0.75);
        margin-bottom: 0;
    }
    
    .barrier-card {
        background-color: #0d1b2a;
        border-radius: 12px;
        padding: 2.5rem 2rem;
        margin-bottom: 1.5rem;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        height: 100%;
    }
    
    .barrier-card:hover {
        transform: translateY(-4px);
        box-shadow: 0 8px 24px rgba(47, 183, 184, 0.15);
    }
    
    .barrier-title {
        font-size: 1.75rem;
        font-weight: 700;
        color: #fff;
        margin-bottom: 1rem;
    }
    
    .barrier-text {
        font-size: 1.125rem;
        line-height: 1.6;
        color: rgba(255, 255, 255, 0.8);
        margin-bottom: 0;
    }
    
    .products-section {
        padding: 5rem 0;
        background-color: transparent;
    }
    
    .products-title {
        font-size: 2.75rem;
        font-weight: 700;
        color: #fff;
        margin-bottom: 1rem;
    }
    
    .products-title span {
        color: #52CEC7;
    }
    
    .products-subtitle {
        font-size: 1.25rem;
        font-weight: 400;
        color: rgba(255, 255, 255, 0.75);
        margin-bottom: 3rem;
    }
    
    .nav-tabs {
        border-bottom: 2px solid rgba(255, 255, 255, 0.1);
        margin-bottom: 3rem;
    }
    
    .nav-tabs .nav-link {
        color: rgba(255, 255, 255, 0.6);
        font-size: 1.25rem;
        font-weight: 600;
        padding: 1rem 2rem;
        border: none;
        border-bottom: 3px solid transparent;
        background: transparent;
        transition: all 0.3s ease;
    }
    
    .nav-tabs .nav-link:hover {
        color: rgba(255, 255, 255, 0.9);
        border-bottom-color: rgba(82, 206, 199, 0.5);
    }
    
    .nav-tabs .nav-link.active {
        color: #fff;
        background: transparent;
        border-bottom-color: #52CEC7;
    }
    
    .tab-content-heading {
        font-size: 2rem;
        font-weight: 700;
        color: #fff;
        margin-bottom: 1.5rem;
    }
    
    .tab-content-text {
        font-size: 1.125rem;
        line-height: 1.7;
        color: rgba(255, 255, 255, 0.85);
        max-width: 800px;
    }
    
    .tab-pane {
        min-height: 200px;
    }
    
    .tab-content-box {
        background-color: rgba(255, 255, 255, 0.03);
        border-radius: 12px;
        padding: 3rem 2.5rem;
        border: 1px solid rgba(255, 255, 255, 0.08);
    }
    
    .tab-cta-btn {
        font-size: 1.125rem;
        padding: 0.875rem 2rem;
        font-weight: 600;
        background-color: transparent;
        border: 2px solid #52CEC7;
        color: #52CEC7;
        transition: all 0.3s ease;
        border-radius: 50px;
        margin-top: 1.5rem;
        display: inline-block;
        text-decoration: none;
    }
    
    .tab-cta-btn:hover {
        background-color: #52CEC7;
        border-color: #52CEC7;
        color: #000;
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(82, 206, 199, 0.3);
    }
    
    .why-trust-section {
        padding: 5rem 0;
        background-color: transparent;
    }
    
    .why-trust-heading {
        font-size: 2.75rem;
        font-weight: 700;
        color: #fff;
        text-align: center;
        margin-bottom: 3rem;
    }
    
    .trust-card {
        background-color: rgba(255, 255, 255, 0.03);
        border-radius: 12px;
        padding: 2.5rem 2rem;
        height: 100%;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        border: 1px solid rgba(255, 255, 255, 0.08);
    }
    
    .trust-card:hover {
        transform: translateY(-4px);
        box-shadow: 0 8px 24px rgba(47, 183, 184, 0.15);
    }
    
    .trust-card-icon {
        width: 60px;
        height: 60px;
        margin: 0 auto 1.5rem;
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: rgba(82, 206, 199, 0.1);
        border-radius: 12px;
    }
    
    .trust-card-icon svg {
        width: 32px;
        height: 32px;
        color: #52CEC7;
    }
    
    .trust-card-title {
        font-size: 1.5rem;
        font-weight: 700;
        color: #fff;
        text-align: center;
        margin-bottom: 1rem;
    }
    
    .trust-card-text {
        font-size: 1rem;
        line-height: 1.6;
        color: rgba(255, 255, 255, 0.8);
        text-align: center;
    }
    
    @media (max-width: 768px) {
        .hero-heading {
            font-size: 2.5rem;
        }
        .hero-subtext {
            font-size: 1.25rem;
        }
        .trust-line {
            font-size: 1.25rem;
        }
        .barriers-heading {
            font-size: 2rem;
        }
        .barrier-title {
            font-size: 1.5rem;
        }
        .products-title {
            font-size: 2rem;
        }
        .tab-content-heading {
            font-size: 1.5rem;
        }
        .nav-tabs .nav-link {
            font-size: 1rem;
            padding: 0.75rem 1rem;
        }
        .why-trust-heading {
            font-size: 2rem;
        }
        .trust-card-title {
            font-size: 1.25rem;
        }
    }
</style>

<Layout title={pageTitle} description={pageDescription}>
    <Navbar />
    <main>
        <section class="hero-section" style="position: relative; overflow: hidden;">
            <video autoplay muted loop playsinline style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; object-fit: cover; z-index: 0; opacity: 0.3;">
                <source src="/assets/videos/retail.mp4" type="video/mp4">
            </video>
            <div class="container" style="position: relative; z-index: 1;">
                <div class="row">
                    <div class="col-12">
                        <h1 class="hero-heading">Retail & E-commerce: Achieve Hyper-Personalization and Operational Resilience</h1>
                        <p class="hero-subtext">Deploy Retrieval Augmented Generation (RAG) and Predictive Modeling for Sales to transform customer experience, eliminate stockouts, and maximize lifetime value.</p>
                        <a href="/contact-us" class="btn hero-cta-btn">Schedule a Free 30-Minute AI Readiness Assessment</a>
                    </div>
                </div>
            </div>
        </section>
        <section class="trust-section">
            <div class="container">
                <div class="row">
                    <div class="col-12">
                        <p class="trust-line">Our team specializes in <span style="color: #52CEC7;">Omnichannel Retail Analytics</span>, ensuring unified data across online and physical channels.</p>
                    </div>
                </div>
            </div>
        </section>
        
        <section class="barriers-section">
            <div class="container">
                <div class="row align-items-start">
                    <div class="col-lg-5 mb-4 mb-lg-0">
                        <h2 class="barriers-heading">The Critical Barriers Slowing Down Retail Innovation</h2>
                        
                    </div>
                    <div class="col-lg-7">
                        <div class="barrier-card">
                            <h3 class="barrier-title">1. The "Ghost Stock" Epidemic</h3>
                            <p class="barrier-text">You are losing sales because your system says "in stock," but the shelf is empty. "Phantom Inventory" caused by disconnects between POS, ERP, and the warehouse triggers a "death spiral"—automated replenishment stops ordering, and your revenue for that SKU vanishes.</p>
                        </div>
                        <div class="barrier-card">
                            <h3 class="barrier-title">2. The "Swivel Chair" Productivity Drain</h3>
                            <p class="barrier-text">Your high-value teams spend more time copying data between screens than serving customers. This "Manual Integration" tax traps employees in low-value admin work, entering invoices into the ERP and re-keying them into logistics systems, killing operational speed.</p>
                        </div>
                        <div class="barrier-card">
                            <h3 class="barrier-title">3. The Regulatory "Greenwashing" Trap (DPP)</h3>
                            <p class="barrier-text">Vague sustainability marketing is now a legal liability. With the EU Digital Product Passport (DPP) coming in 2025, you face audit risks if you cannot cryptographically prove your supply chain origins. You need a Knowledge Graph, not just a spreadsheet, to survive the scrutiny.</p>
                        </div>
                        <div class="barrier-card">
                            <h3 class="barrier-title">4. The "One-and-Done" Customer Churn</h3>
                            <p class="barrier-text">You spend a fortune acquiring customers, only to lose them after one purchase. Without a Unified Customer 360 view, you treat loyal online shoppers like strangers in-store. This fragmented experience is the primary driver of churn in an omnichannel world.</p>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        
        <section class="products-section">
            <div class="container">
                <h2 class="products-title"><span>Our Services,</span> your ease</h2>
                <p class="products-subtitle">Your Conversion-Driven Retail Strategy: Built on DBO's Proven Framework</p>
                
                <ul class="nav nav-tabs" id="productsTab" role="tablist">
                    <li class="nav-item" role="presentation">
                        <button class="nav-link active" id="data-strategy-tab" data-bs-toggle="tab" data-bs-target="#data-strategy" type="button" role="tab" aria-controls="data-strategy" aria-selected="true">
                            AI Solutions
                        </button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link" id="ai-solutions-tab" data-bs-toggle="tab" data-bs-target="#ai-solutions" type="button" role="tab" aria-controls="ai-solutions" aria-selected="false">
                            Data Science
                        </button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link" id="data-science-tab" data-bs-toggle="tab" data-bs-target="#data-science" type="button" role="tab" aria-controls="data-science" aria-selected="false">
                            Data Engineering
                        </button>
                    </li>
                </ul>
                
                <div class="tab-content" id="productsTabContent">
                    <div class="tab-pane fade show active" id="data-strategy" role="tabpanel" aria-labelledby="data-strategy-tab">
                        <div class="row align-items-center">
                            <div class="col-lg-7">
                                <div class="tab-content-box">
                                    <h3 class="tab-content-heading" style="margin-bottom: 2rem;">Automating the "Swivel Chair"</h3>
                                    
                                    <h4 class="tab-content-heading" style="font-size: 1.25rem;">The AI Back-Office Agents</h4>
                                    <p class="tab-content-text">End the "Swivel Chair" productivity drain. We deploy AI Agents and RPA bots that autonomously handle invoice processing, order entry, and returns management—freeing your team to focus on growth, not data entry.</p>
                                    
                                    <h4 class="tab-content-heading" style="margin-top: 2rem; font-size: 1.25rem;">Intelligent Product Tagging</h4>
                                    <p class="tab-content-text">Fix your catalog data instantly. We use Computer Vision and NLP to automatically tag and categorize thousands of SKUs, ensuring your online search works perfectly and customers can find exactly what they want.</p>
                                    
                                    <a href="/contact-us" class="btn tab-cta-btn">See our AI in Action</a>
                                </div>
                            </div>
                            <div class="col-lg-5">
                                <div style="background-color: rgba(255, 255, 255, 0.03); border-radius: 12px; padding: 2rem; border: 1px solid rgba(255, 255, 255, 0.08); display: flex; align-items: center; justify-content: center;">
                                    <img src="/assets/images/retail/ai solution retail.png" alt="AI Solutions - Retail" style="max-width: 100%; height: auto; border-radius: 8px;">
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="tab-pane fade" id="ai-solutions" role="tabpanel" aria-labelledby="ai-solutions-tab">
                        <div class="row align-items-center">
                            <div class="col-lg-7">
                                <div class="tab-content-box">
                                    <h3 class="tab-content-heading" style="margin-bottom: 2rem;">Predicting Demand & Retaining Loyalty</h3>
                                    
                                    <h4 class="tab-content-heading" style="font-size: 1.25rem;">Unified Customer 360 (Churn Prevention)</h4>
                                    <p class="tab-content-text">Stop treating loyal customers like strangers. We build Customer Data Platforms (CDP) that unify online and offline behavior. Our models predict "next best action," empowering staff to personalize interactions and drive repeat purchases.</p>
                                    
                                    <h4 class="tab-content-heading" style="margin-top: 2rem; font-size: 1.25rem;">Dynamic Inventory Optimization</h4>
                                    <p class="tab-content-text">Don't guess what sells. We use Predictive Demand Forecasting to analyze local trends, weather, and social signals, ensuring you stock the right products in the right locations, minimizing markdowns.</p>
                                    
                                    <a href="/contact-us" class="btn tab-cta-btn">Talk to our Data Scientists</a>
                                </div>
                            </div>
                            <div class="col-lg-5">
                                <div style="background-color: rgba(255, 255, 255, 0.03); border-radius: 12px; padding: 2rem; border: 1px solid rgba(255, 255, 255, 0.08); display: flex; align-items: center; justify-content: center;">
                                    <img src="/assets/images/retail/data science retail.png" alt="Data Science - Retail" style="max-width: 100%; height: auto; border-radius: 8px;">
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="tab-pane fade" id="data-science" role="tabpanel" aria-labelledby="data-science-tab">
                        <div class="row align-items-center">
                            <div class="col-lg-7">
                                <div class="tab-content-box">
                                    <h3 class="tab-content-heading" style="margin-bottom: 2rem;">Real-Time Inventory & Compliance</h3>
                                    
                                    <h4 class="tab-content-heading" style="font-size: 1.25rem;">Curing "Ghost Stock" (Real-Time Visibility)</h4>
                                    <p class="tab-content-text">Stop the "Death Spiral." We build Event-Driven Data Pipelines that unify your POS, ERP, and Warehouse data in real-time. This ensures your inventory numbers are accurate to the second, preventing lost sales and stockouts.</p>
                                    
                                    <h4 class="tab-content-heading" style="margin-top: 2rem; font-size: 1.25rem;">Digital Product Passports (DPP)</h4>
                                    <p class="tab-content-text">Turn compliance into a brand asset. We implement Supply Chain Traceability pipelines that map raw materials to finished goods, ensuring you are ready for EU DPP audits and can prove your sustainability claims.</p>
                                    
                                    <a href="/contact-us" class="btn tab-cta-btn">Talk to our Engineers</a>
                                </div>
                            </div>
                            <div class="col-lg-5">
                                <div style="background-color: rgba(255, 255, 255, 0.03); border-radius: 12px; padding: 2rem; border: 1px solid rgba(255, 255, 255, 0.08); display: flex; align-items: center; justify-content: center;">
                                    <img src="/assets/images/retail/data engineering retail.png" alt="Data Engineering - Retail" style="max-width: 100%; height: auto; border-radius: 8px;">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        
        <section class="why-trust-section">
            <div class="container">
                <h2 class="why-trust-heading">Why Trust Us: <span style="color: #52CEC7;">Our Specialized Approach</span></h2>
                
                <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
                    <div class="col">
                        <div class="trust-card">
                            <div class="trust-card-icon">
                                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
                                </svg>
                            </div>
                            <h3 class="trust-card-title">Omnichannel Roadmap</h3>
                            <p class="trust-card-text">Developing a Data Roadmap focused on consolidating fragmented customer data for Omnichannel Analytics and supporting real-time inventory decisions and promotional adjustments.</p>
                        </div>
                    </div>
                    
                    <div class="col">
                        <div class="trust-card">
                            <div class="trust-card-icon">
                                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
                                </svg>
                            </div>
                            <h3 class="trust-card-title">Customer 360 Architecture</h3>
                            <p class="trust-card-text">Designing the target Data Architecture necessary for unifying customer interactions across online, in-store, and Generative AI touchpoints to enable profitable hyper-personalization.</p>
                        </div>
                    </div>
                    
                    <div class="col">
                        <div class="trust-card">
                            <div class="trust-card-icon">
                                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4" />
                                </svg>
                            </div>
                            <h3 class="trust-card-title">Data Monetization Strategy</h3>
                            <p class="trust-card-text">Identifying new revenue streams through data productization, retail media network optimization, and secure data sharing agreements with suppliers.</p>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        
        <Contact />
    </main>
</Layout>
