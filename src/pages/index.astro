---
import Layout from "../layouts/Layout.astro";
import VideoLayout from "../layouts/VideoLayout.astro";
import Hero from "../components/home/Hero.astro";
import Partners from "../components/home/Partners.astro";
import AISolutions from "../components/home/AISolutions.astro";
import About from "../components/home/About.astro";
import Features from "../components/home/Features.astro";
import Services from "../components/common/Services.astro";
import TechAndTestimonials from "../components/home/TechAndTestimonials.astro";
import Contact from "../components/common/Contact.astro";
import RoadMap from "../components/home/RoadMap.astro";

import '../styles/container.css'

// SEO-optimized metadata for homepage
const seoTitle = "Digital Back Office - Enterprise AI & Data Consulting Services";
const seoDescription = "Transform your business with production-ready AI solutions. Expert AI consulting, RAG implementation, data engineering, and ML services trusted by global enterprises. Get measurable ROI in 6 months.";
const seoKeywords = "AI consulting, enterprise AI solutions, RAG implementation, AI agents, data engineering services, machine learning consulting, data strategy, AI transformation, generative AI, data science consulting";

---

<Layout 
	title={seoTitle}
	description={seoDescription}
	keywords={seoKeywords}
	canonical="/"
	preview_image="/preview.png"
>
	<main class="page-wrapper" data-pagefind-ignore>
		<VideoLayout src="/assets/videos/dbo-bg-video-home.mp4">
		<Hero />
		</VideoLayout>
		<Partners />
		<AISolutions />
		<About />
		<TechAndTestimonials />
		<Services />
		<RoadMap />
		<Features />
		<Contact />
	</main>
</Layout>
