---
import Layout from "../layouts/Layout.astro";
import VideoLayout from "../layouts/VideoLayout.astro";
import Hero from "../components/home/Hero.astro";
import About from "../components/home/About.astro";
import Features from "../components/home/Features.astro";
import Services from "../components/common/Services.astro";
import CaseStudies from "../components/home/CaseStudies.astro";
import Tech from "../components/home/Tech.astro";
import Contact from "../components/common/Contact.astro";

import '../styles/container.css'

---

<style>
	.page-wrapper {
		background-image: url("/assets/images/background-pattern.png");
	}
</style>

<Layout>
	<main class="page-wrapper" data-pagefind-ignore>
		<VideoLayout src="/assets/videos/dbo-bg-video-home.mp4">
			<Hero />
		</VideoLayout>
		
		<!-- Partners Section -->
		<section style="padding: 60px 0; background-color: transparent;" data-bs-theme="dark">
			<div class="container">
				<h2 style="text-align: center; font-size: 2rem; font-weight: 700; margin-bottom: 3rem; color: #fff;">
					Our <span style="color: #EEBF2E;">Partners</span>
				</h2>
				<div style="display: flex; justify-content: center; align-items: center; flex-wrap: wrap; gap: 3rem;">
					<div style="flex: 0 1 auto; display: flex; align-items: center; justify-content: center;">
						<img src="/assets/images/tech/azure.svg" alt="Azure" style="height: 80px; width: auto; object-fit: contain; opacity: 0.8; transition: opacity 0.3s ease;" onmouseover="this.style.opacity='1'" onmouseout="this.style.opacity='0.8'" />
					</div>
				</div>
			</div>
		</section>
		
		<About />
		<Features />
		<Services />
		<!-- <CaseStudies /> -->
		<Tech />
		<Contact />
	</main>
</Layout>
